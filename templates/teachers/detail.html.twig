{% extends 'base.html.twig' %}

 {% block title %}{{ title }}{% endblock %}

 {% block body %}
     {% include 'header.html.twig' %}

     <div class="container py-4">
         <div class="p-5 mb-4 bg-light rounded-3">
             <div class="container-fluid py-5">
                 <h1 class="display-5 fw-bold">{{ title }}</h1>

                 <ul class="list-group" style="text-align: start;">
                     <li class="list-group-item"><b>RATE PER HOUR:</b> {{ teacher.cv.RatePerHour }}$</li>
                     <li class="list-group-item"><b>CITY:</b> {{ teacher.city.name }}</li>
                     <li class="list-group-item"><b>GENDER:</b> {{ teacher.gender.name }}</li>
                     <li class="list-group-item"><b>AGE:</b> {{ teacher.age }}</li>
                     <li class="list-group-item"><b>YEARS EXPERIENCE:</b> {{ teacher.yearsExperience }}</li>
                     <li class="list-group-item"><b>RATING:</b> {{ teacher.rating }}</li>
                 </ul>

                 <div class="row align-items-md-stretch" style="margin-top: 3%">
                     <div class="col-md-6">
                         <div class="h-100 p-5 text-white bg-dark rounded-3">
                             <h2>Personal characteristics</h2>
                             <p>{{ teacher.cv.PersonalCharacteristics }}</p>
                         </div>
                     </div>
                     <div class="col-md-6">
                         <div class="h-100 p-5 bg-light border rounded-3">
                             <h2>Experience</h2>
                             <p>{{ teacher.cv.experience }}</p>
                         </div>
                     </div>
                 </div>

                 <button class="btn btn-primary btn-lg" type="button" style="margin-top: 3%">Hire the teacher</button>
             </div>
         </div>


     </div>

     {% include 'footer.html.twig' %}
 {% endblock %}